@model List<Service.Services.Rate.VmRate>
@{
    ViewData["Title"] = "Rate";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Rate Information</h3>
        <a class="btn btn-primary float-right" href="/Rate/Create">Create</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Vehicle Type</th>
                    <th>Rate Per Hour</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var rate in Model)
                {
                    <tr>
                        <td>@rate.VehicleType</td>
                        <td>@rate.RatePerHour</td>
                        <td>
                            <a class="btn btn-info mr-2" href="/Rate/Update/@rate.RateId"><i class="far fa-edit"></i></a>
                            <a class="btn btn-danger" href="/Rate/Delete/@rate.RateId"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
