@model Service.Services.Ticket.VmTicket
@{
    ViewData["Title"] = "Add New Ticket";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Add New Ticket</h3>
    </div>
    <div class="card-body">
        <form method="post" action="/Ticket/Create">
            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label>Vehicle Number<sup class="text-danger">*</sup></label>
                        <input type="text"  class="form-control" name="VehicleNumber" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label>Owner Name<sup class="text-danger">*</sup></label>
                        <input type="text"  class="form-control" name="OwnerName" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label>Owner Phone No<sup class="text-danger">*</sup></label>
                        <input type="number"  class="form-control" name="OwnerPhoneNo" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label>Owner Email<sup class="text-danger">*</sup></label>
                        <input type="email"  class="form-control" name="OwnerEmail" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                        <label>Owner NID<sup class="text-danger">*</sup></label>
                        <input type="number"  class="form-control" name="OwnerNID" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label>Entry Time<sup class="text-danger">*</sup></label>
                        <input type="datetime"  class="form-control" name="EntryTime" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label>Exit Time<sup class="text-danger">*</sup></label>
                        <input type="datetime"  class="form-control" name="EntryTime" required>
                    </div>
                </div>
            </div>
    <button class="btn btn-success float-right" type="submit">Save</button>
    </form>
</div>
</div>
