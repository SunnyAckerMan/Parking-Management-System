@model ParkingManagementSystem.Models.Ticket
@{
    ViewData["Title"] = "Edit Ticket";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Edit Ticket</h3>
    </div>
    <div class="card-body">
        <form method="post" action="/Ticket/Update">
            <input type="hidden" name="TicketId" value="@Model.TicketId" />
            <div class="row">
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label for="inputName">Vehicle Number<sup class="text-danger">*</sup></label>
                        <input type="number" id="inputName" class="form-control" name="CompanyName" value="@Model.VehicleNumber" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label for="inputName">Owner Name<sup class="text-danger">*</sup></label>
                        <input type="text" id="inputName" class="form-control" name="OwnerName" value="@Model.OwnerName" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label for="inputName">Owner Phone No<sup class="text-danger">*</sup></label>
                        <input type="number" id="inputName" class="form-control" name="OwnerPhoneNo" value="@Model.OwnerPhoneNo" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label for="inputName">Owner Emailt<sup class="text-danger">*</sup></label>
                        <input type="text" id="inputName" class="form-control" name="OwnerEmail" value="@Model.OwnerEmail" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                        <label for="inputName">Owner NID<sup class="text-danger">*</sup></label>
                        <input type="number" id="inputName" class="form-control" name="OwnerNID" value="@Model.OwnerNID" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label for="inputName">Entry Time<sup class="text-danger">*</sup></label>
                        <input type="time" id="inputName" class="form-control" name="EntryTime" value="@Model.EntryTime" required>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3">
                    <div class="form-group">
                        <label for="inputName">Exit Time<sup class="text-danger">*</sup></label>
                        <input type="time" id="inputName" class="form-control" name="ExitTime" value="@Model.ExitTime" required>
                    </div>
                </div>
            </div>
    <button class="btn btn-success float-right" type="submit">Save</button>
    </form>
</div>
</div>

