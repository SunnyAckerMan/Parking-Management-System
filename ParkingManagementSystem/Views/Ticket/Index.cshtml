@model List<ParkingManagementSystem.Models.Ticket>
@{
    ViewData["Title"] = "Ticket";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ticket Information</h3>
        <a class="btn btn-primary float-right" href="/Ticket/Create">Create</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Vehicle Number</th>
                    <th>Owner Name</th>
                    <th>Owner PhoneNo</th>
                    <th>Owner Email</th>
                    <th>Owner NID</th>
                    <th>Entry Time</th>
                    <th>Exit Time</th>
                    <th>ParkingSpotIdFk</th>
                    <th>RateIdFk</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.VehicleNumber</td>
                        <td>@ticket.OwnerName</td>
                        <td>@ticket.OwnerPhoneNo</td>
                        <td>@ticket.OwnerEmail</td>
                        <td>@ticket.OwnerNID</td>
                        <td>@ticket.EntryTime</td>
                        <td>@ticket.ExitTime</td>
                        <td>@ticket.ParkingSpotIdFk</td>
                        <td>@ticket.RateIdFk</td>
                        <td>
                            <a class="btn btn-info mr-2" href="/Ticket/Update/@ticket.TicketId"><i class="far fa-edit"></i></a>
                            <a class="btn btn-danger" href="/Ticket/Delete/@ticket.TicketId"><i class="far fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>